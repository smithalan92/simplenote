{
  "name": "SimpleNote",
  "version": "0.0.0",
  "private": true,
  "description": "A simple desktop app for taking notes",
  "author": "Alan Smith <smithalan2@gmail.com>",
  "license": "UNLICENSED",
  "main": "dist/SimpleNote/main.js",
  "scripts": {
    "build--clean": "cross-env BUILD_TARGET=clean node build/build.js",
    "build--mac": "node build/build.js && electron-builder -m --x64 --config dist/config.yaml",
    "build--windows": "node build/build.js && electron-builder -w --ia32 --config dist/config.yaml",
    "start": "cross-env SERVER_ENV=development node build/dev-runner.js",
    "install": "bash ./build/rebuild-native-deps.sh",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src --config ./.eslintrc.js",
    "lint--fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src --config ./.eslintrc.js",
    "lint--scss": "sass-lint -c ./sass-lint.yml -i ./node_modules/**",
    "precommit": "npm run lint--fix"
  },
  "dependencies": {
    "date-fns": "^1.29.0",
    "vue": "^2.5.16"
  },
  "devDependencies": {
    "ajv": "^6.5.0",
    "babel-eslint": "^9.0.0",
    "bluebird": "^3.5.2",
    "cfonts": "^2.1.2",
    "chalk": "^2.4.1",
    "command-line-args": "^5.0.2",
    "copy-webpack-plugin": "^4.5.1",
    "cross-env": "^5.1.6",
    "css-loader": "^0.28.11",
    "del": "^3.0.0",
    "devtron": "^1.4.0",
    "directory-named-webpack-plugin": "^4.0.0",
    "edit-json-file": "^1.1.0",
    "electron": "^3.0.2",
    "electron-builder": "^20.28.4",
    "electron-builder-squirrel-windows": "^20.28.3",
    "electron-debug": "^1.5.0",
    "electron-devtools-installer": "^2.2.4",
    "electron-download": "^4.1.1",
    "electron-rebuild": "^1.8.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-friendly-formatter": "^4.0.1",
    "eslint-loader": "^2.0.0",
    "eslint-plugin-html": "^4.0.3",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-vue": "^4.7.1",
    "file-loader": "^1.1.11",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^0.14.3",
    "mini-css-extract-plugin": "0.4.0",
    "multispinner": "^0.2.1",
    "node-loader": "^0.6.0",
    "node-sass": "^4.9.2",
    "node-yaml": "^3.1.1",
    "request": "^2.88.0",
    "sass-lint": "^1.12.1",
    "sass-lint-vue": "^0.2.1",
    "sass-loader": "^7.0.3",
    "semver": "^5.5.1",
    "style-loader": "^0.21.0",
    "url-loader": "^1.0.1",
    "vue-html-loader": "^1.2.4",
    "vue-loader": "^15.2.4",
    "vue-style-loader": "^4.1.0",
    "vue-svg-loader": "^0.2.0",
    "vue-template-compiler": "^2.5.16",
    "webpack": "^4.15.1",
    "webpack-cli": "^3.0.8",
    "webpack-dev-server": "^3.1.4",
    "webpack-hot-middleware": "^2.22.2",
    "webpack-merge": "^4.1.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/smithalan92/simplenote.git"
  },
  "keywords": [
    "desktop",
    "simple",
    "note",
    "app",
    "markdown"
  ]
}
